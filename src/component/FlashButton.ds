FlashButton {

	background-color: rgba(0, 0, 0, 0.65);
	border-radius: 24px;
	height: 48px;
	width: 48px;

	.icon {
		image-height: 32px;
		image-width: 19px;
		image-tint: #fff;
	}

	.label {
		visible: false;
	}

	&:active {

		background-color: #ffffff;

		.icon {
			image-height: 32px;
			image-width: 19px;
			image-tint: #000;
		}
	}
}